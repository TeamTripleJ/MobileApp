<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="2dp"
    tools:context="com.example.user.calendar_test.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center">

            <Button
                android:text="Homepage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/HomeButton"
                android:layout_weight="1" />

            <Button
                android:text="NewPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/NewPostButton"
                android:layout_weight="1" />

            <Button
                android:text="Scheduler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/SchedulerButton"
                android:layout_weight="1" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:background="?attr/colorButtonNormal"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_height="2dp">
        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="bck"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:id="@+id/button5"
                android:layout_weight="1" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/MonthTitle"
                android:layout_weight="16.97"
                android:textSize="24sp"
                android:textAlignment="center"
                android:gravity="center" />

            <Button
                android:text="fwd"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:id="@+id/button4"
                android:layout_weight="1"
                android:gravity="center" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:background="?attr/colorButtonNormal"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_height="2dp"></FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/MainHeader"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:id="@+id/ScheduleContainer"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
